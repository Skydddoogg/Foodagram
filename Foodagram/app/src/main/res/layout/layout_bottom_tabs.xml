<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tabs_bottom_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/tabs_bottom_bar_layout"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:elevation="0dp"
            android:background="@drawable/background_tabs_bottom_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RadioGroup
                android:checkedButton="@+id/radio_group_post_camera"
                android:id="@+id/radio_group_post"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_group_post_camera"
                    android:background="@drawable/toggle_widget_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mitr"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="กล้อง" />

                <RadioButton
                    android:id="@+id/radio_group_post_gallery"
                    android:layout_width="0dp"
                    android:fontFamily="@font/mitr"
                    android:textSize="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_widget_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="คลังรูปภาพ" />
            </RadioGroup>

        </android.support.design.widget.AppBarLayout>

    </android.support.constraint.ConstraintLayout>
</merge>