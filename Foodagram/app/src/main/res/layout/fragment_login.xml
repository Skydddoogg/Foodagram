<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="230dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/login_text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mitr_regular"
            android:text="เส้นทางที่คุณเลือกกิน"
            android:textColor="#CCffffff"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_logo" />

        <TextView
            android:id="@+id/login_text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/mitr_regular"
            android:text="เข้าสู่ระบบ"
            android:textColor="#CCffffff"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_text_logo" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/login_text_input_top"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/login_ic_email"
            android:ems="10"
            android:fontFamily="@font/mitr_regular"
            android:hint="example@foodagram.com"
            android:inputType="textPersonName"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="180dp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/login_text_input_bottom"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/login_ic_password"
            android:ems="10"
            android:fontFamily="@font/mitr_regular"
            android:hint="password"
            android:inputType="textPassword"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="254dp" />

        <Button
            android:id="@+id/login_login_button"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button_long"
            android:fontFamily="@font/mitr_regular"
            android:text="เข้าสู่ระบบ"
            android:textColor="#ffffff"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="320dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/login_text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mitr_regular"
        android:text="ลืมรหัสผ่าน?"
        android:textColor="#CCffffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bottom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/login_text_no_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_regular"
                android:text="ยังไม่มีบัญชี? "
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/login_text_click_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_regular"
                android:text="แตะที่นี่"
                android:textColor="#FF345C"
                android:textSize="16dp" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>






</android.support.constraint.ConstraintLayout>