<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"

    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_first_name_searchAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kot Keaw"
            android:textColor="#18273C"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/follower_searchAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผู้ติดตาม 86 คน"
                android:textSize="12dp"
                android:textColor="#ABB6C7"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="36dp" />
            <TextView
                android:id="@+id/following_searchAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ติดตามแล้ว"
                android:textSize="12dp"
                android:layout_marginLeft="6dp"
                android:textColor="#FF819A"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="36dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>