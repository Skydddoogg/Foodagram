<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reset_password_background"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:minHeight="181dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/reset_password_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/reset_password_logo" />

        <TextView
            android:id="@+id/reset_password_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ตั้งรหัสผ่านใหม่"
            android:textColor="#fff"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset_password_logo" />

        <TextView
            android:id="@+id/reset_password_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตั้งรหัสผ่านใหม่"
            android:textColor="#CCffffff"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset_password_text_1" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

        <EditText
            android:id="@+id/reset_password_password"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/login_text_input"
            android:ems="10"
            android:fontFamily="@font/mitr_regular"
            android:hint="รหัสผ่านใหม่"
            android:inputType="textPersonName"
            android:textSize="16dp"
             />

        <EditText
            android:id="@+id/reset_password_repassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/login_text_input"
            android:ems="10"
            android:fontFamily="@font/mitr_regular"
            android:hint="กรอกรหัสผ่านใหม่อีกครั้ง"
            android:inputType="textPersonName"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
             />

        <Button
            android:id="@+id/reset_password_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_button_long"
            android:fontFamily="@font/mitr_regular"
            android:text="ยืนยัน"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
             />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>