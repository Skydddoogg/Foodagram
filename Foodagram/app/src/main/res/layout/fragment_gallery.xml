<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/gallery_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="รูปภาพ"
                    android:textSize="20dp"
                    android:textColor="#FF1C49" />

                <TextView
                    android:text="ย้อนกลับ"
                    android:textSize="14dp"
                    android:textColor="#172D4D"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/gallery_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/gallery_image_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <ImageView
                android:scaleType="center"
                android:id="@+id/gallery_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/gallery_progress_bar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/gallery_push_up_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_action_push_up"
            android:tint="#FFF" />

        <GridView
            android:layout_below="@id/gallery_push_up_icon"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:id="@+id/gallery_grid_view"
            android:numColumns="3"
            android:verticalSpacing="1.5dp"
            android:horizontalSpacing="1.5dp"
            android:stretchMode="none"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">
        </GridView>

    </LinearLayout>

</RelativeLayout>